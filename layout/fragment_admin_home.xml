<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AdminHomeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_AdminHome">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/circle"
        android:layout_width="466dp"
        android:layout_height="328dp"
        android:layout_marginTop="-120dp"
        android:layout_marginBottom="60dp"
        android:src="@drawable/circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ResName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Restaurant Name"
        app:layout_constraintBottom_toBottomOf="@id/circle"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.7" />

    <Button
        android:id="@+id/ResMenu_Logout"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log Out"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/circle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16sp"
            android:orientation="vertical">

            <Button
                android:id="@+id/ResInfo"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginBottom="10dp"
                android:text="Restaurant Info"
                android:textSize="18sp" />

            <Button
                android:id="@+id/ResMenu"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginBottom="10dp"
                android:text="Restaurant Menu"
                android:textSize="18sp" />

            <Button
                android:id="@+id/BookList"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginBottom="10dp"
                android:text="Booking List"
                android:textSize="18sp" />

            <Button
                android:id="@+id/TableArrangement"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginBottom="10dp"
                android:text="Table Arrangement"
                android:textSize="18sp" />

            <Button
                android:id="@+id/TableAvai"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginBottom="10dp"
                android:text="Table Avalability"
                android:textSize="18sp" />

            <Button
                android:id="@+id/AdminNoti"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginBottom="10dp"
                android:text="Notification"
                android:textSize="18sp" />


            <Button
                android:id="@+id/viewReport"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginBottom="10dp"
                android:text="View Report"
                android:textSize="18sp" />

            <Button
                android:id="@+id/viewStats"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginBottom="10dp"
                android:text="View Statistic"
                android:textSize="18sp" />

            <Button
                android:id="@+id/ResMenu_Logout2"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginBottom="10dp"
                android:text="Log Out"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
