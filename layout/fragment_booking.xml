<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FragmentBooking"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.BookingFragment">

    <Spinner
        android:id="@+id/SPBookingSort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:entries="@array/SpinnerForBooking"
        android:minHeight="48dp"
        android:textAlignment="viewEnd"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?colorOnBackground"/>

    <ListView
        android:id="@+id/LVBooking"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/individual_booking_item" />

</LinearLayout>